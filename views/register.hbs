    <script>
        //show dropdown menu:
        function showDropDown() {
            $('.learn_menu').css('display','block');
        }
        function hiddenDropDown() {
            if ($('.learn_menu:hover').length === 0) {
                // do something ;)
                $('.learn_menu').css('display','none');
            }
        }
		$( document ).ready(function() {
			$('input[name="email"]').on('focusout',function(){
				//get data 
				let email = $('input[name="email"]').val();
				$.ajax({
					url: "/ajax/register",
					type: "post",
					data: {
						email: email
					},
					dataType: 'json',
				success: function(result){
					console.log(result['status']);
					if (result['status']) $('#correct').css('display','inline-block');
					else  $('#error').css('display','inline-block');
				}
				});
			});
			$('input[name="email"]').on('focusin',function(){
				$('#correct').css('display','none');
				$('#error').css('display','none');
			});
			$("button[type='submit']").click(function(e){
				if ($('#correct').css('display') === "none") e.preventDefault();
			});
		});
		
    </script>

