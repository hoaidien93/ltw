    <script>
        $(document).ready(function() {
            // if login -> change name+ href of login : Profile
            var str = $("#status").text();
            if (str.trim() !== "")
                $("#login").text("My Profile").attr("href", "/profile");
				
			
			$('input[value="Next"]').on('click',function(){
				$('#'+id).css('display','none');
				id++;
				if (id > 5) $('input[name="submit"]').click();
				$('#'+id).css('display','block');
				clearInterval(INT);
				count = 0;
				INT = setInterval(countDown,1000);
			})
			$(".TestForm").not("#1").css('display','none');
			INT = setInterval(countDown,1000);
        });
		var count = 0,IN,id = 1;
		function countDown(){
			count++;
			$(".clock p").text('00:0'+count);
			if (count >=5 ){
				count= 0; 
				clearInterval(INT);
				$('#Next'+id).click();
			}
		}
        //show dropdown menu:
        function showDropDown() {
            $('.learn_menu').css('display','block');
        }
        function hiddenDropDown() {
            if ($('.learn_menu:hover').length === 0) {
                // do something ;)
                $('.learn_menu').css('display','none');
            }
        }
    </script>
