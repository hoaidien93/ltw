			<input type="radio" value="B" name="{{this.id}}"> {{this.B}}<br>
			<input type="radio" value="C" name="{{this.id}}"> {{this.C}}<br>
			<input type="radio" value="D" name="{{this.id}}"> {{this.D}}<br>
			<input type="radio" value="Empty" name={{this.id}} checked="" style="display:none;">
			<input type ="button" value="Next" id="Next{{this.id}}" class="Next">
			</div>
		{{/each}}
